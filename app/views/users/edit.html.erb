<!-- Edition du profil -->

<center>
<div class="card border-warning m-5">
 <div class="card-header"><h1>üë®üèª‚Äçüíª Modifier mon profil</h1></div>
    <%= form_tag url_for(action: 'update'), method: "patch" do %>
        <div class="card-body text-warning">
          <div class="form-group">

            <%if @user.picture.attached?%>
              <%= image_tag @user.picture.variant(resize: "200x200").processed, alt: 'picture' %>
            <%else%>
              <p><img src="http://placehold.it/150x150" id="imgProfile" style="width: 150px; height: 150px" class="img-thumbnail" /></p>
            <%end%>

              <%= form_tag user_pictures_path(@user), multipart: true do %>
              <%= file_field_tag :picture %>
              <%= submit_tag "Change picture" %>
            <%end%>

            <%= label_tag 'First name'%>
            <%= text_field_tag :first_name, @user.first_name, class:'form-control', placeholder: @user.first_name %>

            <%= label_tag 'Last name'%>
            <%= text_field_tag :last_name, @user.last_name, class:'form-control', placeholder: @user.last_name %>

            <%= label_tag 'Description'%>
            <%= text_field_tag :description, @user.description, class:'form-control', placeholder: @user.description %>
            <br>

            <%= submit_tag "Mettre √† jour mon profil", class: "btn btn-outline-warning" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
