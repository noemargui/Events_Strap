          <%= label_tag 'Description' %>
          <%= text_field_tag 'description', "#{@event.description}", :class => "form-control", :rows => "4" %>
        </div>

        <div class="form-group">
          <%= label_tag 'Start Date' %>
          <%= date_field_tag 'start_date', "#{@event.start_date}", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag 'Duration' %>
          <%= text_field_tag 'duration', "#{@event.duration}", :class => "form-control", :placeholder => "5, 10, 15, 20 min etc..", :rows => "4" %>
        </div>

        <div class="form-group">
          <%= label_tag 'Price' %>
          <%= text_field_tag 'price', "#{@event.price}", :class => "form-control", :placeholder => "Min 1 â‚¬ - Max 999 â‚¬", :rows => "4" %>
        </div>

        <div class="form-group">
          <%= label_tag 'Location' %>
          <%= text_field_tag 'location', "#{@event.location}", :class => "form-control", :rows => "4" %>
        </div>


        <br />
        <%= submit_tag "CrÃ©er mon Event", class: "btn btn-outline-warning btn-lg" %>
        <% end %></center>
      </div>
    </div>
  </div>
  <% if @event.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Impossible de crÃ©er l'event pour la/les raison(s) suivante(s) :</p>
