 <div class="text-center" style="margin-top: 5vh">
  <h2>Modifie L'Event</h2>
</div>

<div class="card border-warning  m-5">
 <div class="row justify-content-center align-items-center" style="margin-top: 2vh; margin-bottom: 2vh;">

  <div class="col-md-8 col-sm-12">

    <%= form_tag url_for(action: 'update'), method: "put" do %>
    <div class="form-group">
      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', "#{@event.title}", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag 'Description' %>
      <%= text_area_tag 'description', "#{@event.description}", :class => "form-control", :rows => "4" %>
    </div>

    <div class="form-group">
      <%= label_tag 'Start Date' %>
      <%= date_field_tag 'start_date', "#{@event.start_date}", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag 'Duration' %>
      <%= text_field_tag 'duration', "#{@event.duration}", :class => "form-control", :rows => "4" %>
    </div>

    <div class="form-group">
      <%= label_tag 'Price' %>
      <%= text_field_tag 'price', "#{@event.price}", :class => "form-control", :rows => "4" %>
    </div>

    <div class="form-group">
      <%= label_tag 'Location' %>
      <%= text_field_tag 'location', "#{@event.location}", :class => "form-control", :rows => "4" %>
    </div>


    <center><%= submit_tag "Edit Event", :class => "btn btn-outline-success btn-sm text-center" %></center>

    <% end %>

  </div>
</div>
